        private void LimpiaStatus(DevExpress.Web.ASPxEditors.ASPxLabel lblStatus)
        {
            try
            {
                lblStatus.Text = "";
            }
            catch (Exception ex)
            {
                lblStatus.Text = ex.Message;
            }
        }

